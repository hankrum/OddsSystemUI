@model EventViewModel
@{
    ViewData["Title"] = "_EditEvent";
}
<div class="row text-center">
    @using (Html.BeginForm("EditAll", "SportEvent", FormMethod.Post, new { @name = Model.Id, @id = Model.Id}))
    {
        <div class="col-lg-1">
            @Html.TextBoxFor(x => x.Id, new { @readonly = "readonly", @class = "form-control" })
        </div>
        <div class="col-lg-2">
            @Html.TextBoxFor(x => x.EventName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.EventName)
        </div>
        <div class="col-lg-2">
            @Html.TextBoxFor(x => x.OddsForFirstTeam, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.OddsForFirstTeam)
        </div>
        <div class="col-lg-1">
            @Html.TextBoxFor(x => x.OddsForDraw, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.OddsForDraw)
        </div>
        <div class="col-lg-2">
            @Html.TextBoxFor(x => x.OddsForSecondTeam, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.OddsForSecondTeam)
        </div>
        <div class="col-lg-2">
            @Html.TextBoxFor(x => x.EventStartDate, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.EventStartDate)
        </div>
        <div class="col-lg-1">
            <button type="submit" formaction="@Url.Action("EditAll")">Save</button>
        </div>
        <div class="col-lg-1">
            <button type="submit" formaction="@Url.Action("Delete")">Delete</button>
        </div>
    }
</div>
